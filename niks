<!-- <?php
// login.php
session_start();

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $email = $_POST['email'] ?? '';
    $password = $_POST['password'] ?? '';

    // Connect
    $pdo = new PDO('mysql:host=localhost;dbname=voorbeeld;charset=utf8mb4', 'dbuser', 'dbpass', [
        PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION
    ]);

    // Haal hash op op basis van e-mail (prepared)
    $stmt = $pdo->prepare("SELECT id, password_hash FROM users WHERE email = :email");
    $stmt->execute([':email' => $email]);
    $user = $stmt->fetch(PDO::FETCH_ASSOC);

    if ($user && password_verify($password, $user['password_hash'])) {
        // Optioneel: password_needs_rehash() => rehash met nieuwere algoritme
        // Succes: maak sessie aan
        session_regenerate_id(true);
        $_SESSION['user_id'] = $user['id'];
        echo "Ingelogd!";
    } else {
        // Foutmelding generiek houden (niet "wachtwoord fout" vs "e-mail niet gevonden")
        echo "E-mail of wachtwoord onjuist.";
    }
}
?> -->
